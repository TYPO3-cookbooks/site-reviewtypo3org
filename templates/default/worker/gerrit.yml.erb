# Gerrit configuration file

# These values will be used to connect to the gerrit review service

# The configuration specifies the following keys:
# * user     - Username for the connection
# * host     - Hostname where gerrit is running
# * port     - Port where gerrit is running (can be omitted and defaults to 29419)

# * git_user_email - user.email for preparing git commit message
# * git_user_name - user.name for preparing git commit message

defaults: &defaults
  user: <%= @data[:user] %>
  git_user_name: <%= @data[:git_user_name] %>
  git_user_email:  <%= @data[:git_user_email] %>
  host: <%= @data[:host] %>
  port: <%= @data[:port] %>

development:
  <<: *defaults

test:
  <<: *defaults

production:
  <<: *defaults
